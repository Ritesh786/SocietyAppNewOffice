<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/linearOne">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/one1"
                android:text="1"
                android:textColor="#ffffff"
                android:background="#458b00"
                />
        </LinearLayout>
        <View
            android:layout_width="100dp"
            android:layout_height="2dp"
            android:background="#c1cdcd"
            android:layout_marginTop="19dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/two2"
                android:text="2"
                />
        </LinearLayout>
        <View
            android:layout_width="100dp"
            android:layout_height="2dp"
            android:background="#c1cdcd"
            android:layout_marginTop="19dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/three3"
                android:text="3"
                />
        </LinearLayout>
    </LinearLayout>



    <TextView
        android:id="@+id/textmain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify Your Number"
        android:textStyle="bold"
        android:background="#1f3324"
        android:textColor="#FFDF00"
        android:padding="10dp"
        android:layout_below="@+id/linearOne"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginTop="20dp"

        />


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/linearOne"
        android:padding="10dp"
        android:id="@+id/mobilenewed"
        android:layout_marginBottom="8dp">
        <EditText
            android:id="@+id/mobilenew"
            android:layout_below="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Mobile Number"
            android:maxLength="10"
            />
    </android.support.design.widget.TextInputLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/relativecount"
        android:layout_below="@+id/mobilenewed"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/waittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:text="Sit Back And Relax"
            android:textColor="@color/black"/>

        <cn.iwgang.countdownview.CountdownView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            app:isHideTimeBackground="true"
            android:layout_marginLeft="60dp"
            app:isShowMillisecond="false"
            android:id="@+id/flatClock"
            app:timeTextSize="22sp"
            app:isTimeTextBold="true"
            android:layout_marginTop="22dp"
            android:layout_toRightOf="@+id/waittext"/>

    </RelativeLayout>


    <EditText
    android:id="@+id/textotp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:hint="Enter Otp"
    android:textStyle="bold"
    android:textSize="20dp"
    android:gravity="center"
    android:layout_marginTop="40dp"
        android:inputType="number"
    android:layout_below="@+id/relativecount"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/textotp"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_height="match_parent">


        <FrameLayout
            android:id="@+id/frameLayout1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <Button
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="Resend Otp"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:id="@+id/resend_btn"
                android:background="@drawable/btn"
                android:layout_below="@+id/relative2"
                android:gravity="center"
                />


            <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Next"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:id="@+id/submit_btn"
            android:background="@drawable/btn1"
            android:layout_below="@+id/relative2"
            android:gravity="center"
            />



            <Button
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="Submit"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:id="@+id/next_btn"
                android:background="@drawable/btn"
                android:layout_below="@+id/relative2"
                android:gravity="center"
                />



        </FrameLayout>

    </LinearLayout>


</RelativeLayout>
